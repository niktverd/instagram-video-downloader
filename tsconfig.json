{
  "extends": "@gravity-ui/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "sourceMap": true,
    "target": "ES2019",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "#config/*": ["src/config/*"],
      "#logic": ["src/logic/index.ts"],
      // "#sections/*": ["src/sections/*"],
      "#tests/*": ["src/tests/*"],
      "#types": ["src/types/index.ts"],
      "#utils": ["src/utils/index.ts"],
      "#schemas/*": ["src/schemas/*"],
      "#src/*": ["src/*"],
      "$/*": ["src/sections/*"]
    }
  },
  "include": ["src", "app.ts", "index.ts"],
  "files": [],
  "exclude": ["node_modules"]
}
