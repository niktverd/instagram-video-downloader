# This is a sample .env file for Cloud Run deployment
# In Cloud Run, you would set these environment variables through the Cloud Run Console
# or through the gcloud command line tools

# Instagram App Credentials
INSTAGRAM_APP_NAME=""
INSTAGRAM_APP_ID=""
INSTAGRAM_APP_SECRET=""
INSTAGRAM_ACCESS_TOKEN=""
INSTAGRAM_ACCESS_TOKEN_ARRAY=""

# Instagram User IDs
ALLOWED_SENDER_ID=""
IG_ID=""

# Firebase Configuration
# This should be a JSON string with your Firebase configuration
FIREBASE_CONFIG=""

# Heroku Configuration (if deploying to Heroku)
HEROKU_API_KEY=""
HEROKU_APP_NAME=""

# YouTube API Credentials
YT_CLOUD_ID=""
YT_SECRET_ID=""
YT_REDIRECT_URL=""
YT_REFRESH_TOKEN=""

# Google Cloud Pub/Sub Configuration
GCP_PROJECT_ID=""
PUBSUB_TOPIC_NAME="instagram-video-events"
ENABLE_PUBSUB=true

# Feature Flags
ENABLE_STDERR=true
ENABLE_PROGRESS=true
ENABLE_START=true
ENABLE_DOWNLOAD_VIDEO=true
ENABLE_RUN_SCENARIO_VIDEO=true

# Note: Cloud Run will automatically set PORT to 8080, but you don't need to specify it
# as the application is already configured to use PORT from environment or default to 8080 